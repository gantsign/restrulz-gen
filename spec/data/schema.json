{
  "name": "people",
  "title": "People API",
  "description": "A nice long description\n\n\t* With\n\t* Some\n\t* Bullet points.",
  "version": "1.0.0",
  "simple-types": [
    {
      "name": "name",
      "kind": "string",
      "pattern": "^[\\p{Alpha}']+$",
      "min-length": 1,
      "max-length": 100
    },
    {
      "name": "uuid",
      "kind": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "min-length": 36,
      "max-length": 36
    },
    {
      "name": "age",
      "kind": "integer",
      "minimum": 0,
      "maximum": 150
    },
    {
      "name": "months-employed",
      "kind": "integer",
      "minimum": 0,
      "maximum": 1000
    }
  ],
  "class-types": [
    {
      "name": "person",
      "properties": [
        {
          "name": "first-name",
          "type-ref": "name",
          "allow-empty": false
        },
        {
          "name": "last-name",
          "type-ref": "name",
          "allow-empty": true
        },
        {
          "name": "age",
          "type-ref": "age",
          "allow-null": false
        },
        {
          "name": "employed",
          "type-ref": "boolean"
        },
        {
          "name": "months-employed",
          "type-ref": "months-employed",
          "allow-null": true
        },
        {
          "name": "work-address",
          "type-ref": "address",
          "allow-null": true
        },
        {
          "name": "home-address",
          "type-ref": "address",
          "allow-null": false
        }
      ]
    },
    {
      "name": "address",
      "properties": [
        {
          "name": "id",
          "type-ref": "uuid",
          "allow-empty": false
        }
      ]
    }
  ],
  "responses": [
    {
      "name": "get-person-success",
      "status": 200,
      "body-type-ref": "person"
    },
    {
      "name": "update-person-success",
      "status": 200,
      "body-type-ref": "person"
    }
  ],
  "path-scopes": [
    {
      "name": "person-ws",
      "path": [
        {
          "kind": "static",
          "value": "person"
        },
        {
          "kind": "path-param",
          "name": "id",
          "type-ref": "uuid"
        }
      ],
      "mappings": [
        {
          "kind": "http-method",
          "method": "GET",
          "name": "get-person",
          "parameters": [
            {
              "kind": "path-param-ref",
              "value-ref": "id"
            }
          ],
          "response-ref": "get-person-success"
        },
        {
          "kind": "http-method",
          "method": "PUT",
          "name": "update-person",
          "parameters": [
            {
              "kind": "path-param-ref",
              "value-ref": "id"
            },
            {
              "kind": "body-param-ref",
              "type-ref": "person"
            }
          ],
          "response-ref": "update-person-success"
        }
      ]
    },
    {
      "name": "age-ws",
      "path": [
        {
          "kind": "static",
          "value": "age"
        },
        {
          "kind": "path-param",
          "name": "age",
          "type-ref": "age"
        }
      ],
      "mappings": [
        {
          "kind": "http-method",
          "method": "GET",
          "name": "get-first-person",
          "parameters": [
            {
              "kind": "path-param-ref",
              "value-ref": "age"
            }
          ],
          "response-ref": "get-person-success"
        }
      ]
    },
    {
      "name": "employed-ws",
      "path": [
        {
          "kind": "static",
          "value": "employed"
        },
        {
          "kind": "path-param",
          "name": "employed",
          "type-ref": "boolean"
        }
      ],
      "mappings": [
        {
          "kind": "http-method",
          "method": "GET",
          "name": "get-last-person",
          "parameters": [
            {
              "kind": "path-param-ref",
              "value-ref": "employed"
            }
          ],
          "response-ref": "get-person-success"
        }
      ]
    }
  ]
}
